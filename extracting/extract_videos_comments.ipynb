def get_comments_data(comment_ids_dict):
    data = []
    for video_id, comments_id in comment_ids_dict.items():
        for comment_id in comments_id:
            try:
                ## Get top level comment IDs
                request = youtube.comments().list(
                    part="snippet",
                    id=comment_id
                )
                response = request.execute()
                text = response['items'][0]['snippet']['textOriginal']
                publishedAt = response['items'][0]['snippet']['publishedAt']
                likeCount = response['items'][0]['snippet']['likeCount']
                new_row = {"id": comment_id, "id_video": video_id, "text": text, "published_at": publishedAt, "like_count": likeCount}
                data.append(new_row)
            except Exception as e:
                new_row = {"id": comment_id, "id_video": video_id, "text": np.nan, "published_at": np.nan, "like_count": np.nan}
                data.append(new_row)
    return data

